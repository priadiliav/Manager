FROM node:22-alpine AS build

WORKDIR /app

COPY ["src/Server/Server.Ui/package.json", "src/Server/Server.Ui/package-lock.json", "./"]

RUN npm ci

COPY src/Server/Server.Ui/. .

RUN npm run build

FROM nginx:alpine

COPY --from=build /app/build /usr/share/nginx/html

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
